{
  "root": true,
  "extends": [
    "eslint:recommended",
    "@typescript-eslint/recommended",
    "next/core-web-vitals"
  ],
  "plugins": ["@typescript-eslint"],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "no-console": "warn",
    "no-debugger": "error",
    "no-duplicate-imports": "error",
    "prefer-const": "error",
    "no-var": "error",
    "react/react-in-jsx-scope": "off",
    "react/prop-types": "off",
    "react/display-name": "off",
    "@typescript-eslint/no-unused-vars": "warn",
    "@typescript-eslint/no-explicit-any": "warn"
  },
  "ignorePatterns": [
    "node_modules/**",
    "dist/**",
    "build/**",
    ".next/**",
    "out/**",
    "*.config.js",
    "*.config.mjs",
    "public/**"
  ],
  "overrides": [
    {
      "files": ["apps/web/**/*"],
      "extends": ["./apps/web/.eslintrc.json"]
    }
  ]
}
