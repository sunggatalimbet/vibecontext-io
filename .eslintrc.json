{
  "extends": ["next/core-web-vitals", "prettier"],
  "plugins": ["prettier"],
  "rules": {
    "prettier/prettier": "error",
    "react/react-in-jsx-scope": "off",
    "react/prop-types": "off",
    "react/display-name": "off",
    "no-console": "warn",
    "no-debugger": "error",
    "no-duplicate-imports": "error",
    "prefer-const": "error",
    "no-var": "error"
  },
  "ignorePatterns": [
    ".next/**",
    "out/**",
    "dist/**",
    "build/**",
    "node_modules/**",
    "*.config.js",
    "*.config.mjs",
    "public/**"
  ]
}
